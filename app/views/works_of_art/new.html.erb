<form action="/works_of_art" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Name of Work:</p>
  <input type='text' name='work_of_art[name]'/><br/>
  <p>Artist:</p>
  <input type='text' name='work_of_art[artist]'/><br/>
  <p>Year Created:</p>
  <input type='number' min='-5000' max='2021' name='work_of_art[year]'/><br/>
  <p>On Display:</p>
  <input type="radio" id='yes' name="work_of_art[on_display]" value="true">
  <label for="yes">Yes</label><br>
  <input type="radio" id ='no' name="work_of_art[on_display]" value="false">
  <label for="no">No</label><br>
  <p>Medium:</p>
  <input type='text' name='work_of_art[medium]'/><br/>
  <input type='submit'/>
</form>
